
<form class="form-horizontal" method="post" action="result">
	<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
<fieldset>

<!-- Form Name -->
<legend>Search Course</legend>

<!-- Select Basic -->
<div class="form-group">
  
  <div class="col-md-4">
  	<label class="col-md-0 control-label" for="selectbasic">Subject</label>
   <%=select_tag 'search[subject]', options_from_collection_for_select(@subjects, 'id', 'name_and_id'),prompt: "Select Subject..."%>
  </div>
</div>
<div class="form-group">
 <!-- Text input-->
<div class="col-md-4">
  	<label class="col-md-0 control-label" for="textinput">Course</label>
  <input id="search_course" name="search[course]" placeholder="Type a course name..." class="form-control input-md" type="text">
  </div>
  </div>
  <div class="form-group">
  	 <div class="col-md-4">  	
    <input type="submit" id="singlebutton" name="singlebutton" value="Search" class="btn btn-primary">
  </div>
  	</div>
</fieldset>
</form>
